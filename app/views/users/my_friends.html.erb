<table class="table">
  <thead>
    <tr>
      <th colspan="3" class="page-header"><h1>My Friends</h1></th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>

      <% @friendships.each do |friend| %>
      <tr>
        <td><%= friend.full_name %></td>
        <td><%= friend.email %></td>
        <td>
          <%= link_to 'View Profile', user_path(friend), class: 'btn btn-primary btn-xs'%>
          <%= link_to 'Remove', friendship_path(friend),
                          class: 'btn btn-danger btn-xs',
                          method: :delete %>

        </td>
      </tr>
      <% end %>
  </tbody>
</table>
