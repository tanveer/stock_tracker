<h1 class="text-center">PORTFOLIO</h1> <hr>
<h4 class="text-center">Search for stocks</h4>
<div class="form-box">
    <div class="panel-body">
    <%= form_tag search_stocks_path, remote: true, method: :get do %>
      <div class="form-group row col-md-12">
        <div class="col-md-10">
          <%= text_field_tag :stock, params[:stock],
          placeholder: 'Search for stocks', autofocus: true,
                                              class: 'form-control input-lg' %>
        </div>
        <div class="col-md-2">
          <%= button_tag(type: :submit, class: 'btn btn-primary btn-lg') do %>
            <i class="fa fa-search"></i> Look up stock
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<hr>
<div id="stock-result">
  <%= render 'users/result' %>
</div>

<%= render 'users/stocks' %>
